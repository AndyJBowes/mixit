{{> header}}

<div class="mxt-wrapper--page-title">
    <div class="row">
        <div class="columns large-8 large-offset-2">
            <h1 class="text-center">{{#i18n}}login.title{{/i18n}}</h1>
        </div>
    </div>
</div>

<div class="mxt-wrapper--page-content">
    <div class="large-5 large-centered columns">
      <div class="callout">
        <div class="row">
          <div class="large-12 columns">
            <form action="/login/create" method="post">
              <div class="row">
                <div class="large-12 columns text-center">
                  <b>{{email}}</b>
                  <input type="hidden" name="email" value="{{email}}" />
                  <br>&nbsp;
                </div>
              </div>
              <div class="row">
                Types your firstname and your lastname
              </div>
              <div class="row">
                <div class="large-12 columns">
                  <input type="text" name="firstname" placeholder="Firstname" />
                </div>
              </div>
              <div class="row">
                <div class="large-12 columns">
                  <input type="text" name="lastname" placeholder="Lastname" />
                </div>
              </div>
              <div class="row">
                Choose your OAuth provider
              </div>
              <div class="row">
                  <div class="large-12 columns">
                      <select name="provider" placeholder="OAuth provider">
                          <option></option>
                          <option value="Github">Github</option>
                          <option value="Google">Google</option>
                          <option value="Twitter">Twitter</option>
                      </select>
                  </div>
              </div>
              <div class="row">
                <div class="large-12 large-centered columns">
                  <input type="submit" class="button expand" value="Log In"/>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
</div>

{{> footer}}
