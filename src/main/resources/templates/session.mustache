{{> header}}

<div class="mxt-wrapper--space"></div>

<div class="row">
    <div class="column large-8 large-offset-2">

        <h1 class="text-center">{{#i18n}}session.title{{/i18n}}</h1>
        <hr />
        <div class="callout">
            <article>
                <h2>{{session.title}}</h2>
                <p class="subheader">
                    {{session.event}} / #{{session.format}}
                    {{#session.video}}
                        / &#x25ba;&nbsp;{{#i18n}}session.video.watch{{/i18n}} <a href="{{session.video}}">{{#i18n}}session.video.thevideo{{/i18n}}</a>
                    {{/session.video}}
                </p>
                <p class="lead">{{session.summary}}</p>
                <p class="subheader">
                    {{#session.speakers}}
                        <a href="{{localePrefix}}/speaker/{{login}}">{{firstname}} {{lastname}}</a> /
                    {{/session.speakers}}
                </p>
                <p>{{session.description}}</p>
            </article>

        </div>
    </div>
</div>

{{> footer}}
